{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"strict": true,
		"useDefineForClassFields": false,
		"experimentalDecorators": true,
		"noUncheckedIndexedAccess": true,
		"outDir": "./lib",
		"declaration": false,
		"declarationMap": false,
		"sourceMap": false,
		"types": ["node"]
	}
}
